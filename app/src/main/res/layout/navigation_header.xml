<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="?attr/colorPrimaryDark"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:id="@+id/rlNavHeaderContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivNavHeaderProfileImage"
            android:layout_width="@dimen/dim70"
            android:layout_height="@dimen/dim70"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dim10"
            android:layout_toRightOf="@+id/ivNavHeaderProfileImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNavHeaderProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. X"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/dimTex18" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>